{
	"$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"performance": {
				"all": true
			},
			"security":{
				"all": true
			},
			"complexity": {
				"all": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentSize": 2
	},
	"javascript":{
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "double"
		}
	}
}
